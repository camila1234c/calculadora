        form {
            display: inline-block;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        input {
            width: 200px;
            height: 30px;
            font-size: 16px;
            margin-bottom: 10px;
            text-align: right;
        }
        button {
            width: 50px;
            height: 30px;
            font-size: 16px;
            margin: 5px;
            cursor: pointer;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
